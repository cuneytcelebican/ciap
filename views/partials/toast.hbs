{{!-- Toast shows massages to user --}}
<div aria-live="polite" aria-atomic="true" style="position: initial; min-height: 0px;">
  <!-- Position it -->
  <div style="position: absolute; top: 20px; right: 20px;">
    <div class="toast" id="element" role="alert" aria-live="assertive" aria-atomic="true" data-delay="8000">
      <div class="toast-header">
        <i class="fas fa-info-circle"></i>
        <strong class="mr-auto" id="toast-title">Bootstrap</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body" id="toast-message">
        Heads up, toasts will stack automatically
      </div>
    </div>
  </div>
</div>